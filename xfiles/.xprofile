#!/bin/zsh

export PATH="/home/dino/bin:$PATH"

if [ "$GDMSESSION" = "bspwm" ]; then
    # keyboard
    setxkbmap -layout us,us -variant ,alt-intl -option grp:shifts_toggle &> xprofile.log
    xset r rate 220 30
    xbindkeys &

    # mouse
    xsetroot -cursor_name left_ptr &> xprofile.log
    unclutter &

    # other programs
    eval $(ssh-agent)
    redshift -m randr -r -l 52.0685:4.5094 -t 5700:3000 &

    [ -f ~/.config/conky/.conkyrc.$HOSTNAME ] && conky -c ~/.config/conky/.conkyrc.$HOSTNAME &

    [ ! -s ~/.config/mpd/pid ] && mpd

    # compositor
    compton --config ~/.config/compton.conf -CGb
fi
